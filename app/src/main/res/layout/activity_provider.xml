<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jlkf.oidemo.contacts.provider.ProviderActivity">

    <Button
        android:id="@+id/insert_btn"
        android:onClick="insert"
        android:text="insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/query_btn"
        app:layout_constraintStart_toEndOf="@id/insert_btn"
        android:onClick="query"
        android:text="query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/update_btn"
        app:layout_constraintStart_toEndOf="@id/query_btn"
        android:onClick="update"
        android:text="update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/delete_btn"
        app:layout_constraintStart_toEndOf="@id/update_btn"
        android:onClick="delete"
        android:text="delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/insert_btn"
        android:id="@+id/info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>

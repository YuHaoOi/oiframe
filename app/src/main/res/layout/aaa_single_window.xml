<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_pop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/aaa_pop_bg">

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:textColor="@color/theme_text"
        android:textSize="@dimen/theme_text" />

    <View
        android:id="@+id/slide_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/content"
        android:background="@color/theme_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/slide_view">


        <TextView
            android:id="@+id/sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/theme_text_hot"
            android:textSize="@dimen/theme_text" />
    </LinearLayout>
</RelativeLayout>
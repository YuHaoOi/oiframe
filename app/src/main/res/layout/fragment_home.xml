<?xml version="1.0" encoding="utf-8"?>
<com.jlkf.oidemo.other.widget.OiScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="214dp"
            app:image_scale_type="center_crop"
            app:indicator_drawable_selected="@drawable/shape_dot"
            app:indicator_drawable_unselected="@drawable/shape_dot_unselect"
            app:indicator_height="5dp"
            app:indicator_margin="2.8dp"
            app:indicator_width="5dp"
            app:is_auto_play="true" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/enter_rv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/theme_white"
            android:paddingBottom="@dimen/theme_padding_big"
            android:paddingTop="@dimen/theme_padding_big">
        </android.support.v7.widget.RecyclerView>

        <View
            style="@style/ViewStyle" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/info_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</com.jlkf.oidemo.other.widget.OiScrollView>